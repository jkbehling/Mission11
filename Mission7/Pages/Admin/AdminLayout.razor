@inherits LayoutComponentBase

@*Here I used bootstrap to make a border under the title div, added some margins on the left, and aligned the items in the center*@
<div class="row border-bottom align-items-center">
    <div class="col">
        <h1>Bookstore Administration</h1>
    </div>
    <div class="col-1">
       @*Here I used bootstrap to put a logout icon in my button*@
        <a class="btn btn-md btn-primary" href="/account/logout">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
                <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
            </svg>
            Logout
        </a>
    </div>
    

</div>

<div class="container-fluid">
    <NavLink class="btn btn-outline-primary" href="/admin/books" style="margin: 15px" ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
    <NavLink class="btn btn-outline-primary" href="/admin/purchases" style="margin: 15px" ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Purchases</NavLink>
    <div class="row p-2">

        <div class="col">
            @Body
        </div>
    </div>
</div>